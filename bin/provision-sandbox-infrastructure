#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""
Provision a sandbox infrastructure
"""
import argparse


def parse_arguments():
    """
    Parse command line arguments
    """
    parser = argparse.ArgumentParser(
        description=__doc__,
    )
    parser.add_argument(
        '-V',
        '--vpc',
        default='10.4.0.0/16',
        metavar='CIDR_BLOCK'
    )
    parser.add_argument(
        '-s',
        '--subnet',
        default='10.4.0.0/24',
        metavar='CIDR_BLOCK'
    )
    parser.add_argument(
        '-t',
        '--terminate',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-c',
        '--create',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-l',
        '--list',
        default=True,
        action='store_true',
    )
    arguments = parser.parse_args()
    return arguments


def main(arguments):
    """
    Handle core functionality; create, destroy, or describe
    """
    if arguments.terminate:
        print('TODO: terminate')
    if arguments.create:
        print('TODO: create')
    if arguments.list:
        print('TODO: list')

if __name__ == '__main__':
    arguments = parse_arguments()
    main(arguments)
