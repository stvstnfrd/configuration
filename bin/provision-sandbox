#!/usr/bin/env python
# -*- coding: utf-8 -*-
"""
Provision an EC2 instance for use as an OpenEdX sandbox
"""
import argparse

from boto.ec2 import EC2Connection


def parse_arguments():
    parser = argparse.ArgumentParser(
        description=__doc__,
    )
    parser.add_argument(
        '-n',
        '--instance-name',
        required=True,
    )
    parser.add_argument(
        '-d',
        '--disk-size',
        default=16,
        help='the disk size in MB(?)'
    )
    parser.add_argument(
        '-t',
        '--terminate',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-c',
        '--create',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-l',
        '--list',
        default=True,
        action='store_true',
    )
    parser.add_argument(
        '-s',
        '--start',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-S',
        '--stop',
        default=False,
        action='store_true',
    )
    parser.add_argument(
        '-a',
        '--ami',
        default='ami-b06717d0',
        help='(default=ami-b06717d0, base=ami-2b2f594b)',
    )
    arguments = parser.parse_args()
    arguments.instance_name = "sandbox-instance-{name}".format(
        name=arguments.instance_name,
    )
    return arguments

def get_instance(arguments):
    connection_ec2 = EC2Connection()
    instances = connection_ec2.get_only_instances(
        filters={
            'tag:Name': arguments.instance_name,
            'tag:Deployment': 'sandbox',
        },
    )
    len_instances = len(instances)
    assert len(instances) <= 1
    if len_instances == 1:
        instance = instances[0]
    else:
        instance = None
    return instance


def terminate_instance(arguments):
    instance = get_instance(arguments)
    instance.terminate()
    return None


def create_instance(arguments):
    instance = get_instance(arguments)
    print('TODO: create')
    print('ansible-playbook ./edx_sandbox.yml --private-key=~/.ssh/ubuntu')
    return instance


def start_instance(arguments):
    instance = get_instance(arguments)
    instance.start()
    instance = get_instance(arguments)
    return instance


def list_instance(arguments):
    instance = get_instance(arguments)
    print(instance.tags)
    name = instance.tags['Name']
    name = name.split('-')[-1]
    dns = name + '-sandbox.class.stanford.edu'
    print('name', name)
    print('id', instance.id)
    print('id', instance.state)
    print('tags', instance.tags)
    print('instance_type', instance.instance_type)
    print('private_ip_address', instance.private_ip_address)
    print('public_dns_name', instance.public_dns_name)
    print('dns', dns)
    return instance


def stop_instance(arguments):
    instance = get_instance(arguments)
    instance.stop()
    instance = get_instance(arguments)
    return instance


def main(arguments):
    # print(arguments)
    if arguments.stop:
        stop_instance(arguments)
    if arguments.terminate:
        terminate_instance(instance)
    if arguments.create:
        create_instance(arguments)
    elif arguments.start:
        start_instance(arguments)
    if arguments.list:
        list_instance(arguments)

if __name__ == '__main__':
    arguments = parse_arguments()
    main(arguments)
